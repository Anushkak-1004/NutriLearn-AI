# Database Configuration
# Set USE_SUPABASE=false to use in-memory storage for development
USE_SUPABASE=true

# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key-here

# Legacy Database URL (not used with Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/nutrilearn

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000

# ML Model Configuration
MODEL_PATH=../ml-models/food_classifier.pth

# API Configuration
API_V1_PREFIX=/api/v1
DEBUG=True

# JWT Authentication Configuration
# Generate a secure secret key with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=7
